{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "R",
			"code": [
				"devtools::test()"
			],
			"problemMatcher": [
				"$testthat"
			],
			"group": "test",
			"label": "R: Test",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"type": "R",
			"code": [
				"browseURL('http://localhost:8080/')",
				"golem::run_dev()"
			],
			"group": "none",
			"isBackground": true,
			"problemMatcher": [],
			"label": "R: Run App",
			"presentation": {
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"type": "R",
			"code": [
				"source('dev/watch.R')"
			],
			"group": "none",
			"isBackground": true,
			"problemMatcher": [],
			"label": "R: Run App (watch)",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"type": "R",
			"code": [
				"rsconnect::deployApp(appName='nhp_dev_outputs', forceUpdate=TRUE, launch.browser=FALSE)"
			],
			"group": "none",
			"isBackground": true,
			"problemMatcher": [],
			"label": "R: Deploy to dev"
		},
		{
			"type": "R",
			"code": [
				"c <- covr::package_coverage()",
				"covr::to_cobertura(c, 'coverage.xml')",
				"print(c)"
			],
			"group": "none",
			"isBackground": true,
			"problemMatcher": [],
			"label": "R: Generate Coverage"
		}
	]
}